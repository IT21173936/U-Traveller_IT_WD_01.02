<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/hotel_booking_btn"
        android:layout_width="258dp"
        android:layout_height="63dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:text="Hotel Booking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/vehicle_rent_btn"
        android:layout_width="258dp"
        android:layout_height="63dp"
        android:layout_marginTop="80dp"
        android:text="Vehicle Rent"
        app:layout_constraintEnd_toEndOf="@+id/hotel_booking_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/hotel_booking_btn"
        app:layout_constraintTop_toBottomOf="@+id/hotel_booking_btn" />

    <Button
        android:id="@+id/tour_guide_btn"
        android:layout_width="258dp"
        android:layout_height="63dp"
        android:layout_marginTop="80dp"
        android:text="Tour Guide"
        app:layout_constraintEnd_toEndOf="@+id/vehicle_rent_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vehicle_rent_btn"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_rent_btn" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bgphoto"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>